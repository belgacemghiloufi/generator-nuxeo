package <%= pkg %>;

public class <%= s.classify(name) %> {
    public static final String BUNDLE_NAME = "studio.extensions.<%= symbolicName %>";

<% _.forEach(res.documentTypes, function(docType) { -%>
    public static final String <%= s.underscored(docType.id).toUpperCase() %>_DOC_TYPE = "<%= docType.id %>";

<% });
   _.forEach(res.schemas, function(schema) { -%>
    public static final String <%= s.underscored(schema.id).toUpperCase() %>_SCHEMA = "<%= schema.id %>";

<%     _.forEach(schema.fields, function(field) { -%>
    public static final String <%= s.underscored(schema.id).toUpperCase() %>_<%= s.underscored(field[0]).toUpperCase() %>_PROPERTY = "<%= schema.prefix + ':' + field[0] %>";

<%     });
   });

   _.forEach(res.facets, function(facet) {
    if (facet.deprecated) { return; } // Skip deprecated facet
-%>
    public static final String <%= s.underscored(facet.id).toUpperCase() %>_FACET = "<%= facet.id %>";

<% });
   _.forEach(res.operationChains, function(chain) {
    if (chain['@source']) { return; } // Skip chain that are contributed automatically (like ones defined with a Workflow)
-%>
    public static final String <%= s.underscored(chain['@id']).toUpperCase() %>_CHAIN = "<%= chain['@id'] %>";

<%     _.forEach(chain.chain.inputParams, function(param) { -%>
    /**
     * Parameter name: <%= param['@name'] %>
     * Parameter type: <%= param['@type'] %>
     */
    public static final String <%= s.underscored(chain['@id']).toUpperCase() %>_<%= s.underscored(param['@name']).toUpperCase() %>_PARAMETER = "<%= param['@name'] %>";

<%     });
   });
   _.forEach(res.operationScriptings, function(script) { -%>
    public static final String <%= s.underscored(script['@id']).toUpperCase() %>_OPERATION = "<%= script['category'] + '.' + script['@id'] %>";

<%     _.forEach(script.params, function(param) { -%>
    /**
     * Parameter name: <%= param['@name'] %>
     * Parameter type: <%= param['@type'] %>
     */
    public static final String <%= s.underscored(script['@id']).toUpperCase() %>_<%= s.underscored(param['@name']).toUpperCase() %>_PARAMETER = "<%= param['@name'] %>";

<%     });
   }); -%>
}
